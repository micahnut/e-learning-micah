<% provide(:title, "Users") %>
    <div class="form">
        <h1 class="text-center">List of Users</h1>
        <div class="container">
            <ul class="users">
                <li class="dropdown-divider"></li>

                <% @users.each do|user|%>
                    <li class="users-item">
                        <span class="d-inline-flex">
                            <%= gravatar_for user, size: 52%>
                            <%= link_to user.name, user, class:"mx-2" %>
                            <%# <%= link_to  "| delete", user_path(user), method: :delete, data: {confirm: "Are you sure you want to delete this user?" } %> 

                            <%= button_to user_path(user), method: :delete, class:"btn btn-danger btn-sm", data: {confirm: "Are you sure you want to delete this user?" } do %>
                                <%= fa_icon "trash" %>
                            <% end%>
                        </span>
                    </li>

                    <li class="dropdown-divider"></li>
                <%end%>
                <div class="container d-flex justify-content-center">
                    <%= will_paginate %>
                </div>
            </ul>
        </div>
    </div>

